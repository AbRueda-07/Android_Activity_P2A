<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA"
    tools:context=".LayoutsActivity">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vistas de Layouts"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"/>

    <!-- LinearLayout horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear Horizontal 1"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear Horizontal 2"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- FrameLayout -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#E0E0E0"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejemplo de FrameLayout"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- ScrollView con fondo claro -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:background="#F5F5F5"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScrollView: contenido que puedes deslizar."
                android:textColor="@android:color/black"/>

            <!-- Líneas de ejemplo -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 1" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 2" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 3" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 4" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 5" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 6" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 7" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 8" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 9" android:layout_marginTop="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Línea de texto 10" android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnVolverLayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_gravity="center"/>
</LinearLayout>
